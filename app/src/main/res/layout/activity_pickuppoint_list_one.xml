<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/frequentquestions_toolbar"
        layout="@layout/title_toolbar" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/frequentquestions_toolbar"
        android:background="#bfbfbf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/listorder"
            android:visibility="gone">

            <TextView
                android:id="@+id/textEnterArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="@string/texrArea"
                android:textColor="@color/navigation_drawers_bg_color"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/relativeSearchArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textEnterArea"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/editSearchArea"
                    android:layout_width="250dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/background_box"
                    android:hint="@string/i_e_450001_or_bangalore"
                    android:paddingLeft="6dp" />

                <Button
                    android:id="@+id/searchBtn"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toRightOf="@+id/editSearchArea"
                    android:background="@drawable/background_box"
                    android:text="@string/search" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="Self pick-up point are available in"
                android:textColor="@color/navigation_drawers_bg_color"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/area"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/self"
                android:layout_marginTop="10dp"
                android:background="@drawable/order_list_background">

                <TextView
                    android:id="@+id/AreaLocality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="Area/Locality"
                    android:textColor="@color/navigation_drawers_bg_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_below="@+id/self"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/area"
                android:background="@drawable/order_list_background">

                <TextView
                    android:id="@+id/ServiceAvailableIN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Service available in"
                    android:textColor="@color/navigation_drawers_bg_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/area">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="yalahanka"
                    android:textColor="#696969"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="147dp"
                    android:layout_marginTop="5dp"
                    android:background="#808080" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="120dp"
                    android:text="5600651"
                    android:textColor="#696969"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>