<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rltiomestamp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/select_delivery_time_slot" />

    <TextView
        android:id="@+id/textTimeSlotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/request_you_to_be_on_time_to_collect_your_order_missing_your_pick_up_time_might_lead_to_order_cancellation" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/timeSlotRecyclerview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTimeSlotText"
        android:layout_marginTop="6dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>